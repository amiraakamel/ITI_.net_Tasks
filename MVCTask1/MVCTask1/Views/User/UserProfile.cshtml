@{
    var userName = "amira kamel";
    var userJobTitle = "Backend Developer";
    var userImage = Url.Content("~/Photo/user-image-with-black-background.png");
    var userAddress = "Egypt Tanta";
    var fullName = "Amira Kamel";
    var email = "fkhvh@gmail.com";
    var phone = "(239) 816-9029";
    var mobile = "(320) 380-4539";
    var hobbies = new List<string> { "Reading", "Coding", "Traveling" };
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile Page</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body text-center">
                        <img src="@userImage" alt="Profile Image" class="rounded-circle" style="width:150px;height:150px;">
                        <h3 class="mt-3">@userName</h3>
                        <h5>@userJobTitle</h5>
                        <p>@userAddress</p>
                        <button class="btn btn-primary">Follow</button>
                        <button class="btn btn-secondary">Message</button>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Full Name</h5>
                        <p class="card-text">@fullName</p>

                        <h5 class="card-title">Email</h5>
                        <p class="card-text">@email</p>

                        <h5 class="card-title">Phone</h5>
                        <p class="card-text">@phone</p>

                        <h5 class="card-title">Mobile</h5>
                        <p class="card-text">@mobile</p>

                        <h5 class="card-title">Address</h5>
                        <p class="card-text">@userAddress</p>

                        <h5 class="card-title">Hobbies</h5>
                        <ul>
                            @foreach (var hobby in hobbies)
                            {
                                <li>@hobby</li>
                            }
                        </ul>

                        <button class="btn btn-info">Edit</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
