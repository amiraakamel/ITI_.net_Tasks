@*
    This is User Details
*@
<div class="card" style="width: 80% ; margin :auto;">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">Age: @Model.Age</p>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">Email: @Model.Email</li>
        <li class="list-group-item">Password: @Model.Password</li>
    </ul>
    <div class="card-body">
        <a asp-action="Index" asp-controller="Post" class="card-link">Back To All</a>
    </div>
</div>
