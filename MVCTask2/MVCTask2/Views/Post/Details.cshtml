@*
    This is Post Details
*@
@model Post
<div class="card" style="width: 80% ; margin :auto;">
    <div class="card-body">
        <h5 class="card-title">@Model.Title</h5>
        <p class="card-text">Age: @Model.Category</p>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">Body: @Model.Body</li>
        <li class="list-group-item">Likes: @Model.Likes</li>
        <li class="list-group-item">Share: @Model.Share</li>
        <li class="list-group-item">Share: @ViewBag.UserName</li>
    </ul>
    <div class="card-body">
        <a asp-action="Index" asp-controller="Post" class="card-link">Back To All</a>
    </div>
</div>
